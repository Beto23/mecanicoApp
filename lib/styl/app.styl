@import "vendor/normalize.css";
@import 'vendor/swiper.css';
@import 'nib';
*
	box-sizing:border-box;
body
	background-image:url(../img/fondoBody2.png)
	font-size:16px;

.Contenedor
	background:white;
	width:90%;
	max-width:900px;
	margin:0 auto;
	font-family: 'Raleway', sans-serif;
	.Header
		width:100%;
		height:60px;
		background:#fff;
		padding:1em 3em;
		&-title
			margin:0;
			float:left;
		&-btn
			float:right;
			&-registrarse,
			&-login
				border:0;
				border-radius:8px;
				padding:.5em 1em;
				background:green;
				font-size:.8em;
			&-registrarse
				margin-right:.6em;
	.Banner
		width:100%;
		height:500px;
		background: black;
		.swiper-slide
			position:relative;
			h2
				margin:0;
				position:absolute;
				bottom:0;
				background:rgba(black,.6);
				color:white;
				left:0;
				right:0;
				text-align:center;
				padding:1em 0;
			img
				width:100%;
				height:100%;
	.About
		display:flex;
		justify-content:space-around;
		padding:1em 0;
		&-Info
			width:10em;
			text-align:center;
			box-shadow:0px 0px 20px 0px rgba(black,.6)
			padding:6px 6px;
			h3
				border-bottom:1px solid black;
				display:inline-block;
				padding-bottom:.3em;
				margin:0;
			.IconoFace
				display:block;
				margin-top:15px;
				img
					width:50px;
					height:50px;